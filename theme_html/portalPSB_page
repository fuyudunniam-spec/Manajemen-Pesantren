    <script>
        lucide.createIcons();

        function changeState(state) {
            const card = document.getElementById('status-card');

            if (state === 'accepted') {
                card.innerHTML = `
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 text-green-600">
                        <i data-lucide="check-circle-2" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-center font-display text-xl text-green-800 mb-2">Selamat! Anda Diterima</h3>
                    <p class="text-center text-xs text-stone-500 leading-relaxed mb-6">
                        Anda telah lulus seleksi. Silakan login ke E-Maktab untuk memulai aktivitas akademik.
                    </p>
                    <button class="w-full py-3 bg-royal-900 text-white rounded-full font-bold text-sm hover:bg-royal-800 shadow-lg mb-3">
                        Login E-Maktab
                    </button>
                    <button class="w-full py-3 border border-royal-900 text-royal-900 rounded-full font-bold text-sm hover:bg-royal-50">
                        Download SK Kelulusan
                    </button>
                `;
            } else {
                card.innerHTML = `
                    <div class="w-16 h-16 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4 text-gold-600">
                        <i data-lucide="clock" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-center font-display text-xl text-royal-900 mb-2">Verifikasi Admin</h3>
                    <p class="text-center text-xs text-stone-500 leading-relaxed mb-6">
                        Data Anda sedang diperiksa oleh panitia. Estimasi waktu verifikasi 1x24 jam kerja.
                    </p>
                    <button class="w-full py-3 bg-stone-200 text-stone-400 rounded-full font-bold text-sm cursor-not-allowed" disabled>
                        Menunggu Hasil
                    </button>
                `;
            }
            lucide.createIcons();
        }
    </script>
