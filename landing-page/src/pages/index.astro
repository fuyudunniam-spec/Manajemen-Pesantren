---
import AcademyLayout from '../layouts/AcademyLayout.astro';
import { sanityFetch, queries, urlFor } from '../lib/sanity';

// --- FETCH SANITY DATA ---
const landingData = await sanityFetch<any>(queries.landingPage);

// --- FALLBACK MOCK DATA ---
const heroData = landingData?.hero || {
    title: "Membangun Peradaban dengan Ilmu",
    subtitle: "Isyraq Annur Academy",
    description: "Pusat studi Islam bersanad yang memadukan kedalaman tradisi turats klasik dengan wawasan kontemporer untuk menjawab tantangan zaman.",
    ctaPrimary: { text: "Lihat Katalog Kelas", link: "/courses" },
    ctaSecondary: { text: "Tentang Kami", link: "/about-academy" }
};

const stats = landingData?.stats || [
    { label: "Siswa Terdaftar", value: "1,250+" },
    { label: "Materi Video", value: "450+" },
    { label: "Pengajar Ahli", value: "12+" },
    { label: "Kepuasan Siswa", value: "98%" }
];

const featuredCoursesSection = landingData?.featuredCourses || {};
const featuredCourses = featuredCoursesSection.courses || [
    {
        title: "Tafsir Al-Azhar: Pendekatan Modern",
        category: { name: "Tafsir" },
        level: "All Levels",
        duration: "120m",
        instructor: { name: "KH. Ahmad Bisri" },
        slug: { current: "tafsir-al-azhar-modern" },
        price: 150000,
        discountPrice: 99000
    },
    {
        title: "Bahasa Arab Klasik: Nahwu Wadhih",
        category: { name: "Bahasa" },
        level: "Beginner",
        duration: "90m",
        instructor: { name: "Ustadz Fulan Al-Azhari" },
        slug: { current: "bahasa-arab-klasik-nahwu" },
        price: 125000,
        discountPrice: null
    },
    {
        title: "Fiqih Muamalah: Ekonomi Syariah",
        category: { name: "Fiqih" },
        level: "Intermediate",
        duration: "150m",
        instructor: { name: "Dr. Ekonomi Islam" },
        slug: { current: "fiqih-muamalah-ekonomi" },
        price: 200000,
        discountPrice: 149000
    }
];

const whyUs = landingData?.whyUs || [
    {
        title: "Sanad Terhubung",
        description: "Kurikulum kami disusun berdasarkan tradisi keilmuan Islam yang memiliki silsilah (sanad) hingga ke sumbernya.",
        icon: "shield-check"
    },
    {
        title: "Kurikulum Terstruktur",
        description: "Pembelajaran dirancang secara akademis dari tingkat dasar hingga lanjutan secara bertahap.",
        icon: "book-open"
    },
    {
        title: "Fleksibilitas Belajar",
        description: "Akses materi video dan modul berkualitas kapan saja dan di mana saja sesuai kecepatan belajar Anda.",
        icon: "clock"
    },
    {
        title: "Profit for Non-Profit",
        description: "Seluruh keuntungan operasional akademi disalurkan kembali untuk dana beasiswa santri di Pesantren Al-Bisri.",
        icon: "heart"
    }
];

const instructors = landingData?.instructors || [
    { name: "KH. Ahmad Bisri", role: "Pakar Tafsir & Hadis", photo: null },
    { name: "Ustadz Fulan", role: "Ahli Peradaban Islam", photo: null },
    { name: "Dr. Aminah", role: "Dosen Bahasa Arab", photo: null }
];

const ctaData = landingData?.ctaSection || {
    title: "Siap Memulai Perjalanan Keilmuanmu?",
    description: "Daftarkan diri Anda hari ini dan jadilah bagian dari generasi yang menghidupkan tradisi keilmuan Islam.",
    primaryCta: { text: "Daftar Sekarang", link: "/courses" },
    secondaryCta: { text: "Konsultasi Pendidikan", link: "/hubungi-kami" }
};
---

<AcademyLayout title="Isyraq Academy | Pusat Studi Islam & Peradaban">
    
    <!-- Hero Section -->
    <section class="relative min-h-[85vh] flex items-center bg-royal-950 overflow-hidden px-6">
        <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
        <div class="absolute -right-20 top-20 w-[600px] h-[600px] bg-royal-800/30 rounded-full blur-[100px]"></div>
        
        <div class="max-w-7xl mx-auto w-full relative z-10 grid lg:grid-cols-2 gap-16 items-center pt-20">
            <div class="space-y-8 animate-fade-in relative z-20">
                <div class="inline-flex items-center gap-3 px-4 py-2 bg-royal-900/50 backdrop-blur-md rounded-full border border-white/10 shadow-inner">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gold-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-gold-500"></span>
                    </span>
                    <span class="text-[10px] font-bold uppercase tracking-[0.2em] text-royal-100 italic">{heroData.subtitle}</span>
                </div>
                
                <h1 class="text-5xl md:text-7xl font-display font-medium text-white leading-[1.05]">
                    {typeof heroData.title === 'string' 
                        ? heroData.title.split(' ').map((word, i) => i === 2 ? <span class="text-gold-400 italic font-serif relative transition-all duration-500 hover:text-gold-500 cursor-default inline-block">
                            {word} 
                            <svg class="absolute -bottom-2 left-0 w-full h-2 text-gold-500/30" viewBox="0 0 100 10" preserveAspectRatio="none">
                                <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="2" fill="none" />
                            </svg>
                        </span> : word + ' ')
                        : "Membangun Peradaban dengan Ilmu"}
                </h1>
                
                <p class="text-lg md:text-xl text-royal-100/80 font-light max-w-lg leading-relaxed pl-6 border-l-2 border-gold-400/30">
                    {heroData.description}
                </p>

                <div class="flex flex-wrap gap-5 pt-4">
                    <a href={heroData.ctaPrimary?.link || "/courses"} class="group relative px-8 py-4 bg-gold-400 text-royal-950 font-bold uppercase tracking-widest text-xs rounded-full hover:bg-gold-500 transition-all shadow-2xl shadow-gold-400/20 hover:scale-105 active:scale-95 duration-300">
                        <span class="relative z-10 flex items-center gap-2">
                            {heroData.ctaPrimary?.text || "Lihat Katalog Kelas"}
                            <i data-lucide="arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                        </span>
                    </a>
                    <a href={heroData.ctaSecondary?.link || "/about-academy"} class="px-8 py-4 bg-white/5 border border-white/10 text-white font-bold uppercase tracking-widest text-xs rounded-full hover:bg-white/10 transition-all backdrop-blur-sm">
                        {heroData.ctaSecondary?.text || "Tentang Kami"}
                    </a>
                </div>
            </div>

            <!-- Hero Image Section -->
            <div class="relative lg:h-[70vh] flex items-center justify-center pt-10 lg:pt-0">
                <!-- Decorative Elements -->
                <div class="absolute -inset-10 bg-royal-500/10 rounded-full blur-[120px] animate-pulse"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full border border-white/5 rounded-[4rem] rotate-3 scale-95 hidden lg:block"></div>
                
                <div class="relative w-full aspect-[4/5] lg:aspect-auto lg:h-full max-w-md lg:max-w-none group">
                    <div class="absolute inset-0 bg-gradient-to-t from-royal-950/80 via-transparent to-transparent z-10 rounded-[3rem]"></div>
                    
                    <!-- Main Hero Image Frame -->
                    <div class="w-full h-full rounded-[3.5rem] overflow-hidden border border-white/20 shadow-2xl relative bg-royal-900/20">
                        {heroData.heroImage ? (
                            <img 
                                src={urlFor(heroData.heroImage).width(800).height(1000).url()} 
                                alt={heroData.heroImage.alt || "Isyraq Academy Hero"}
                                class="w-full h-full object-cover transition duration-1000 group-hover:scale-110"
                            />
                        ) : (
                            <img 
                                src="/images/academy-hero.png" 
                                alt="Academy Hero"
                                class="w-full h-full object-cover transition duration-1000 group-hover:scale-110 shadow-inner"
                            />
                        )}

                        <!-- Floating Glass Card -->
                        <div class="absolute bottom-10 left-6 right-6 lg:left-10 lg:right-10 z-20 p-6 lg:p-8 bg-royal-900/60 backdrop-blur-xl border border-white/10 rounded-3xl shadow-2xl translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-700">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="w-12 h-12 bg-gold-400 rounded-2xl flex items-center justify-center text-royal-950 shadow-lg">
                                    <i data-lucide="scroll" class="w-6 h-6"></i>
                                </div>
                                <div>
                                    <h4 class="text-white font-display text-xl leading-none">Pembelajaran Bersanad</h4>
                                    <p class="text-[10px] text-royal-100/60 font-bold uppercase tracking-widest mt-1">Authentic Transmission</p>
                                </div>
                            </div>
                            <p class="text-royal-100/90 text-sm font-light leading-relaxed">
                                Jalur transmisi keilmuan yang terjaga, menghubungkan Anda langsung dengan tradisi para ulama melalui kurikulum yang terstruktur.
                            </p>
                        </div>
                    </div>

                    <!-- Side Floating Badge -->
                    <div class="absolute -right-6 top-20 bg-royal-900/90 backdrop-blur border border-white/10 p-5 rounded-3xl shadow-2xl hidden xl:flex flex-col items-center gap-2 animate-bounce-slow">
                        <div class="flex -space-x-2">
                            {[1,2,3].map(i => <div class="w-8 h-8 rounded-full border-2 border-royal-900 bg-royal-700 overflow-hidden shadow-lg"><div class="w-full h-full bg-royal-600 flex items-center justify-center text-[10px] text-white font-bold">U{i}</div></div>)}
                        </div>
                        <span class="text-[9px] text-royal-100 font-bold uppercase tracking-wider text-center">1,250+ Siswa<br/>Terpercaya</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <div class="bg-royal-950 border-t border-white/5 py-16 px-6 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full animate-shimmer"></div>
        <div class="max-w-7xl mx-auto relative z-10">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-12 md:gap-8">
                {stats.map((stat, i) => (
                    <div class={`text-center group ${i !== stats.length - 1 ? 'md:border-r border-white/10' : ''}`}>
                        <div class="relative inline-block">
                            <p class="text-4xl md:text-5xl font-display font-medium text-white mb-2 group-hover:text-gold-400 transition-all duration-300 transform group-hover:scale-110">{stat.value}</p>
                            <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gold-400 group-hover:w-full transition-all duration-500"></div>
                        </div>
                        <p class="text-[11px] text-royal-400 uppercase tracking-[0.2em] font-bold mt-2">{stat.label}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Featured Courses Section -->
    <section class="py-24 bg-stone-50 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
                <div>
                    <span class="text-royal-800 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block">Program Terpilih</span>
                    <h2 class="text-4xl md:text-5xl font-display text-royal-950">Kurikulum <span class="italic text-royal-700">Unggulan</span></h2>
                </div>
                <a href="/courses" class="text-royal-900 font-bold text-sm uppercase tracking-widest hover:text-royal-700 transition flex items-center gap-2 group border-b-2 border-royal-900/10 pb-1">
                    Lihat Semua Program <i data-lucide="arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {featuredCourses.map(course => (
                    <div class="group bg-white rounded-3xl border border-stone-200 overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-500">
                        <div class="aspect-video bg-royal-900/10 relative overflow-hidden flex items-center justify-center p-0">
                            {course.thumbnail ? (
                                <img src={urlFor(course.thumbnail).width(400).height(225).url()} alt={course.title} class="w-full h-full object-cover" />
                            ) : (
                                <i data-lucide="book-open" class="w-12 h-12 text-royal-800/20 group-hover:scale-110 transition duration-500"></i>
                            )}
                            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-[9px] font-bold uppercase tracking-widest text-royal-800 shadow-sm">
                                {course.category?.name || "Umum"}
                            </div>
                        </div>
                        <div class="p-8">
                            <h3 class="text-xl font-display font-bold text-royal-950 mb-3 group-hover:text-royal-700 transition leading-snug">
                                {course.title}
                            </h3>
                            <div class="flex items-center gap-4 mb-6 text-stone-500 text-xs">
                                <span class="flex items-center gap-1.5"><i data-lucide="user" class="w-3.5 h-3.5"></i> {course.instructor?.name || "Pengajar Ahli"}</span>
                                <span class="flex items-center gap-1.5"><i data-lucide="bar-chart" class="w-3.5 h-3.5"></i> {course.level || "Semua Level"}</span>
                            </div>
                            
                            <div class="flex items-center justify-between border-t border-stone-100 pt-6">
                                <div>
                                    {course.discountPrice && <p class="text-[10px] text-stone-400 line-through mb-0.5">Rp {course.price?.toLocaleString('id-ID')}</p>}
                                    <p class="text-lg font-bold text-royal-900">Rp {(course.discountPrice || course.price)?.toLocaleString('id-ID')}</p>
                                </div>
                                <a href={`/courses/${course.slug?.current || course.slug}`} class="w-10 h-10 rounded-full bg-stone-50 flex items-center justify-center text-royal-900 hover:bg-royal-900 hover:text-white transition-colors duration-300">
                                    <i data-lucide="arrow-right" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Why Us Section -->
    <section class="py-24 bg-white px-6">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-24 items-center">
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-4">
                        <div class="bg-gradient-to-br from-royal-50 to-royal-100 rounded-3xl aspect-[3/4] overflow-hidden flex items-center justify-center relative">
                            <i data-lucide="book-open-check" class="w-20 h-20 text-royal-600/50"></i>
                            <div class="absolute bottom-4 left-4 right-4 text-center">
                                <span class="text-xs font-bold text-royal-800 uppercase tracking-wider">Kurikulum Bersanad</span>
                            </div>
                        </div>
                        <div class="bg-royal-900 rounded-3xl aspect-square flex items-center justify-center p-8 text-center text-white">
                            <p class="font-display text-2xl">"Belajar sekaligus beramal."</p>
                        </div>
                    </div>
                    <div class="space-y-4 pt-12">
                        <div class="bg-gold-400 rounded-3xl aspect-square flex items-center justify-center p-8">
                             <i data-lucide="award" class="w-16 h-16 text-royal-950"></i>
                        </div>
                        <div class="bg-gradient-to-br from-stone-100 to-stone-200 rounded-3xl aspect-[3/4] overflow-hidden flex items-center justify-center relative">
                            <i data-lucide="users" class="w-20 h-20 text-stone-400/50"></i>
                            <div class="absolute bottom-4 left-4 right-4 text-center">
                                <span class="text-xs font-bold text-stone-600 uppercase tracking-wider">1,250+ Siswa</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-12">
                    <div>
                        <span class="text-royal-800 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block animate-fade-in">Mengapa Isyraq Academy?</span>
                        <h2 class="text-4xl md:text-5xl font-display text-royal-950 mb-6 leading-tight">Membangun Fondasi Keberkahan Melalui <span class="italic text-royal-700 relative">Pendidikan<span class="absolute -bottom-1 left-0 w-full h-1 bg-gold-400/20 rounded-full"></span></span></h2>
                    </div>

                    <div class="space-y-10">
                        {whyUs.map((item, i) => (
                            <div class="flex gap-6 group">
                                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-royal-50 to-royal-100/50 border border-royal-100 flex items-center justify-center shrink-0 group-hover:bg-royal-900 group-hover:text-white transition-all duration-500 shadow-sm group-hover:shadow-xl group-hover:shadow-royal-900/20 group-hover:-translate-y-1">
                                    <i data-lucide={item.icon} class="w-6 h-6 text-royal-800 group-hover:text-white transition-colors duration-500"></i>
                                </div>
                                <div class="space-y-2">
                                    <h4 class="font-bold text-royal-950 text-xl group-hover:text-royal-700 transition-colors duration-300">{item.title}</h4>
                                    <p class="text-stone-600 text-sm leading-relaxed font-light">
                                        {item.description}
                                    </p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mentors Section -->
    <section class="py-24 bg-royal-950 px-6 relative overflow-hidden">
         <div class="absolute inset-0 opacity-5" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
         <div class="max-w-7xl mx-auto relative z-10">
             <div class="text-center mb-16">
                 <span class="text-royal-100/60 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block">Tim Ahli Kami</span>
                 <h2 class="text-4xl md:text-5xl font-display text-white italic">Pengajar & Mudaris</h2>
             </div>

              <div class="grid md:grid-cols-3 gap-8">
                 {instructors.map(mentor => (
                     <div class="bg-white/5 border border-white/10 p-8 rounded-[2rem] text-center hover:bg-white/10 transition duration-300">
                         <div class="w-24 h-24 bg-royal-800 rounded-full mx-auto mb-6 flex items-center justify-center border-4 border-royal-900 shadow-xl overflow-hidden">
                             {mentor.photo ? (
                                 <img src={urlFor(mentor.photo).width(200).height(200).url()} alt={mentor.name} class="w-full h-full object-cover" />
                             ) : (
                                 <span class="text-white text-4xl font-display font-medium">{mentor.name?.charAt(0) || "U"}</span>
                             )}
                         </div>
                         <h4 class="font-display text-2xl text-white mb-2">{mentor.name}</h4>
                         <p class="text-royal-100/60 text-xs font-bold uppercase tracking-widest">{mentor.role}</p>
                      </div>
                  ))}
              </div>
              
              <div class="mt-16 text-center">
                  <p class="text-royal-200 text-sm italic mb-8">Peluang untuk berbagi ilmu selalu terbuka.</p>
                  <a href="/mentors" class="text-gold-400 font-bold uppercase tracking-widest text-xs hover:text-gold-500 transition flex items-center justify-center gap-2">
                      Lihat Semua Pengajar <i data-lucide="plus" class="w-4 h-4"></i>
                  </a>
              </div>
         </div>
    </section>

    <!-- Final CTA -->
     <section class="py-24 bg-white px-6">
        <div class="max-w-5xl mx-auto">
             <div class="bg-royal-900 rounded-[3rem] p-12 md:p-20 text-center relative overflow-hidden shadow-3xl">
                 <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
                 <div class="absolute top-0 right-0 w-64 h-64 bg-gold-400/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
                 
                 <div class="relative z-10">
                    <h2 class="text-4xl md:text-6xl font-display text-white mb-8 leading-tight">
                        {ctaData.title?.split(' ').map((word, i, arr) => i === arr.length - 1 ? <span class="italic text-gold-400">{word}</span> : word + ' ')}
                    </h2>
                     <p class="text-royal-100/80 text-lg md:text-xl max-w-2xl mx-auto mb-12 font-light">
                         {ctaData.description}
                     </p>
                     <div class="flex flex-col sm:flex-row gap-4 justify-center">
                         <a href={ctaData.primaryCta?.link || "/courses"} class="px-10 py-5 bg-gold-400 text-royal-950 font-bold uppercase tracking-widest text-xs rounded-full hover:bg-gold-500 transition-all shadow-xl shadow-gold-400/20 active:scale-95 duration-200">
                             {ctaData.primaryCta?.text || "Daftar Sekarang"}
                         </a>
                         <a href={ctaData.secondaryCta?.link || "/hubungi-kami"} class="px-10 py-5 border border-white/20 text-white font-bold uppercase tracking-widest text-xs rounded-full hover:bg-white/10 transition-all">
                             {ctaData.secondaryCta?.text || "Konsultasi Pendidikan"}
                         </a>
                     </div>
                 </div>
             </div>
        </div>
    </section>

</AcademyLayout>

<style>
    .animate-fade-in {
        animation: fadeIn 1.2s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-bounce-slow {
        animation: bounce 4s infinite ease-in-out;
    }

    @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    .animate-shimmer {
        animation: shimmer 6s infinite linear;
    }

    @keyframes shimmer {
        100% { transform: translateX(100%); }
    }

    /* Custom Scrollbar for a premium feel */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #052e16;
    }
    ::-webkit-scrollbar-thumb {
        background: #14532d;
        border-radius: 10px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #d4af37;
    }
</style>

<script is:inline>
    // Robust Lucide Icon Initialization
    function initAcademyIcons() {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
            console.log('Academy Icons Initialized');
        } else {
            console.error('Lucide not found!');
        }
    }

    // Run on initial load
    window.addEventListener('load', initAcademyIcons);
    
    // Run after Astro view transition
    document.addEventListener('astro:page-load', initAcademyIcons);
    document.addEventListener('astro:after-swap', initAcademyIcons);

    // Immediate attempt if script is already loaded
    if (document.readyState === 'complete') {
        initAcademyIcons();
    }
</script>
