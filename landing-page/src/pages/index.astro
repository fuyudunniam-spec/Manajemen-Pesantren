---
import AcademyLayout from '../layouts/AcademyLayout.astro';
import { sanityFetch, queries, urlFor } from '../lib/sanity';

// --- FETCH SANITY DATA ---
const landingData = await sanityFetch<any>(queries.landingPage);

// --- FALLBACK MOCK DATA ---
const heroData = landingData?.hero || {
    title: "Membangun Peradaban dengan Ilmu",
    subtitle: "Isyraq Annur Academy",
    description: "Pusat studi Islam bersanad yang memadukan kedalaman tradisi turats klasik dengan wawasan kontemporer untuk menjawab tantangan zaman.",
    ctaPrimary: { text: "Lihat Katalog Kelas", link: "/courses" },
    ctaSecondary: { text: "Tentang Kami", link: "/about-academy" }
};

const stats = landingData?.stats || [
    { label: "Siswa Terdaftar", value: "1,250+" },
    { label: "Materi Video", value: "450+" },
    { label: "Pengajar Ahli", value: "12+" },
    { label: "Kepuasan Siswa", value: "98%" }
];

const featuredCoursesSection = landingData?.featuredCourses || {};
const featuredCourses = featuredCoursesSection.courses || [
    {
        title: "Tafsir Al-Azhar: Pendekatan Modern",
        category: { name: "Tafsir" },
        level: "All Levels",
        duration: "120m",
        instructor: { name: "KH. Ahmad Bisri" },
        slug: { current: "tafsir-al-azhar-modern" },
        price: 150000,
        discountPrice: 99000
    },
    {
        title: "Bahasa Arab Klasik: Nahwu Wadhih",
        category: { name: "Bahasa" },
        level: "Beginner",
        duration: "90m",
        instructor: { name: "Ustadz Fulan Al-Azhari" },
        slug: { current: "bahasa-arab-klasik-nahwu" },
        price: 125000,
        discountPrice: null
    },
    {
        title: "Fiqih Muamalah: Ekonomi Syariah",
        category: { name: "Fiqih" },
        level: "Intermediate",
        duration: "150m",
        instructor: { name: "Dr. Ekonomi Islam" },
        slug: { current: "fiqih-muamalah-ekonomi" },
        price: 200000,
        discountPrice: 149000
    }
];

const whyUs = landingData?.whyUs || [
    {
        title: "Sanad Terhubung",
        description: "Kurikulum kami disusun berdasarkan tradisi keilmuan Islam yang memiliki silsilah (sanad) hingga ke sumbernya.",
        icon: "shield-check"
    },
    {
        title: "Kurikulum Terstruktur",
        description: "Pembelajaran dirancang secara akademis dari tingkat dasar hingga lanjutan secara bertahap.",
        icon: "book-open"
    },
    {
        title: "Fleksibilitas Belajar",
        description: "Akses materi video dan modul berkualitas kapan saja dan di mana saja sesuai kecepatan belajar Anda.",
        icon: "clock"
    },
    {
        title: "Profit for Non-Profit",
        description: "Seluruh keuntungan operasional akademi disalurkan kembali untuk dana beasiswa santri di Pesantren Al-Bisri.",
        icon: "heart"
    }
];

const instructors = landingData?.instructors || [
    { name: "KH. Ahmad Bisri", role: "Pakar Tafsir & Hadis", photo: null },
    { name: "Ustadz Fulan", role: "Ahli Peradaban Islam", photo: null },
    { name: "Dr. Aminah", role: "Dosen Bahasa Arab", photo: null }
];

const ctaData = landingData?.ctaSection || {
    title: "Siap Memulai Perjalanan Keilmuanmu?",
    description: "Daftarkan diri Anda hari ini dan jadilah bagian dari generasi yang menghidupkan tradisi keilmuan Islam.",
    primaryCta: { text: "Daftar Sekarang", link: "/courses" },
    secondaryCta: { text: "Konsultasi Pendidikan", link: "/hubungi-kami" }
};
---

<AcademyLayout title="Isyraq Academy | Pusat Studi Islam & Peradaban">
    
    <!-- Hero Section -->
    <section class="relative min-h-[85vh] flex items-center bg-emerald-950 overflow-hidden px-6">
        <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
        <div class="absolute -right-20 top-20 w-[600px] h-[600px] bg-emerald-800/30 rounded-full blur-[100px]"></div>
        
        <div class="max-w-7xl mx-auto w-full relative z-10 grid lg:grid-cols-2 gap-16 items-center pt-20">
            <div class="space-y-8 animate-fade-in">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur rounded-full border border-white/20">
                    <span class="w-1.5 h-1.5 rounded-full bg-yellow-500 animate-pulse"></span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-emerald-100 italic">{heroData.subtitle}</span>
                </div>
                
                <h1 class="text-5xl md:text-7xl font-display font-medium text-white leading-[1.1]">
                    {typeof heroData.title === 'string' 
                        ? heroData.title.split(' ').map((word, i) => i === 2 ? <span class="text-yellow-500 italic font-serif">{word} </span> : word + ' ')
                        : "Membangun Peradaban dengan Ilmu"}
                </h1>
                
                <p class="text-lg md:text-xl text-emerald-200 font-light max-w-lg leading-relaxed pl-6 border-l border-yellow-500/50">
                    {heroData.description}
                </p>

                <div class="flex flex-wrap gap-4 pt-4">
                    <a href={heroData.ctaPrimary?.link || "/courses"} class="px-8 py-4 bg-yellow-500 text-emerald-950 font-bold uppercase tracking-widest text-xs rounded-full hover:bg-yellow-400 transition shadow-xl shadow-yellow-500/20 hover:scale-105 active:scale-95 duration-200">
                        {heroData.ctaPrimary?.text || "Lihat Katalog Kelas"}
                    </a>
                    <a href={heroData.ctaSecondary?.link || "/about-academy"} class="px-8 py-4 border border-white/20 text-white font-bold uppercase tracking-widest text-xs rounded-full hover:bg-white/10 transition-all">
                        {heroData.ctaSecondary?.text || "Tentang Kami"}
                    </a>
                </div>
            </div>

            <!-- Hero Feature Card -->
            <div class="hidden lg:block relative group">
                <div class="absolute -inset-4 bg-emerald-500/20 rounded-[3rem] blur-2xl group-hover:bg-emerald-500/30 transition duration-500"></div>
                <div class="relative bg-emerald-900/40 p-1 backdrop-blur-xl border border-white/10 rounded-[3rem] overflow-hidden shadow-2xl">
                    <div class="bg-emerald-950/60 rounded-[2.8rem] aspect-[4/5] flex flex-col items-center justify-center text-center p-12">
                        <div class="w-24 h-24 bg-yellow-500/10 rounded-full flex items-center justify-center mb-8 border border-yellow-500/20">
                            <i data-lucide="scroll" class="w-10 h-10 text-yellow-500"></i>
                        </div>
                        <h3 class="font-display text-3xl text-white mb-4">Pembelajaran Bersanad</h3>
                        <p class="text-emerald-200 leading-relaxed font-light">
                            Kami memastikan setiap ilmu yang Anda pelajari memiliki jalur transmisi yang jelas dan terpercaya.
                        </p>
                        <div class="mt-12 flex items-center gap-4 bg-white/5 px-6 py-3 rounded-full border border-white/10">
                            <div class="flex -space-x-3">
                                {[1,2,3].map(i => <div class="w-8 h-8 rounded-full border-2 border-emerald-900 bg-emerald-700"></div>)}
                            </div>
                            <span class="text-xs text-emerald-300 font-bold uppercase tracking-widest">Bergabung Bersama Kami</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <div class="bg-emerald-950 border-t border-white/5 py-12 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                {stats.map(stat => (
                    <div class="text-center group">
                        <p class="text-3xl md:text-4xl font-display font-medium text-white mb-1 group-hover:text-yellow-500 transition duration-300">{stat.value}</p>
                        <p class="text-[10px] text-emerald-400 uppercase tracking-widest font-bold">{stat.label}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Featured Courses Section -->
    <section class="py-24 bg-stone-50 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
                <div>
                    <span class="text-emerald-700 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block">Program Terpilih</span>
                    <h2 class="text-4xl md:text-5xl font-display text-emerald-950">Kurikulum <span class="italic text-emerald-600">Unggulan</span></h2>
                </div>
                <a href="/courses" class="text-emerald-900 font-bold text-sm uppercase tracking-widest hover:text-emerald-700 transition flex items-center gap-2 group border-b-2 border-emerald-900/10 pb-1">
                    Lihat Semua Program <i data-lucide="arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {featuredCourses.map(course => (
                    <div class="group bg-white rounded-3xl border border-stone-200 overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-500">
                        <div class="aspect-video bg-emerald-900/10 relative overflow-hidden flex items-center justify-center p-0">
                            {course.thumbnail ? (
                                <img src={urlFor(course.thumbnail).width(400).height(225).url()} alt={course.title} class="w-full h-full object-cover" />
                            ) : (
                                <i data-lucide="book-open" class="w-12 h-12 text-emerald-800/20 group-hover:scale-110 transition duration-500"></i>
                            )}
                            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-[9px] font-bold uppercase tracking-widest text-emerald-800 shadow-sm">
                                {course.category?.name || "Umum"}
                            </div>
                        </div>
                        <div class="p-8">
                            <h3 class="text-xl font-display font-bold text-emerald-950 mb-3 group-hover:text-emerald-700 transition leading-snug">
                                {course.title}
                            </h3>
                            <div class="flex items-center gap-4 mb-6 text-stone-500 text-xs">
                                <span class="flex items-center gap-1.5"><i data-lucide="user" class="w-3.5 h-3.5"></i> {course.instructor?.name || "Pengajar Ahli"}</span>
                                <span class="flex items-center gap-1.5"><i data-lucide="bar-chart" class="w-3.5 h-3.5"></i> {course.level || "Semua Level"}</span>
                            </div>
                            
                            <div class="flex items-center justify-between border-t border-stone-100 pt-6">
                                <div>
                                    {course.discountPrice && <p class="text-[10px] text-stone-400 line-through mb-0.5">Rp {course.price?.toLocaleString('id-ID')}</p>}
                                    <p class="text-lg font-bold text-emerald-900">Rp {(course.discountPrice || course.price)?.toLocaleString('id-ID')}</p>
                                </div>
                                <a href={`/courses/${course.slug?.current || course.slug}`} class="w-10 h-10 rounded-full bg-stone-50 flex items-center justify-center text-emerald-900 hover:bg-emerald-900 hover:text-white transition-colors duration-300">
                                    <i data-lucide="arrow-right" class="w-5 h-5"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Why Us Section -->
    <section class="py-24 bg-white px-6">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-24 items-center">
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-4">
                        <div class="bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-3xl aspect-[3/4] overflow-hidden flex items-center justify-center relative">
                            <i data-lucide="book-open-check" class="w-20 h-20 text-emerald-600/50"></i>
                            <div class="absolute bottom-4 left-4 right-4 text-center">
                                <span class="text-xs font-bold text-emerald-800 uppercase tracking-wider">Kurikulum Bersanad</span>
                            </div>
                        </div>
                        <div class="bg-emerald-900 rounded-3xl aspect-square flex items-center justify-center p-8 text-center text-white">
                            <p class="font-display text-2xl">"Belajar sekaligus beramal."</p>
                        </div>
                    </div>
                    <div class="space-y-4 pt-12">
                        <div class="bg-yellow-500 rounded-3xl aspect-square flex items-center justify-center p-8">
                             <i data-lucide="award" class="w-16 h-16 text-emerald-950"></i>
                        </div>
                        <div class="bg-gradient-to-br from-stone-100 to-stone-200 rounded-3xl aspect-[3/4] overflow-hidden flex items-center justify-center relative">
                            <i data-lucide="users" class="w-20 h-20 text-stone-400/50"></i>
                            <div class="absolute bottom-4 left-4 right-4 text-center">
                                <span class="text-xs font-bold text-stone-600 uppercase tracking-wider">1,250+ Siswa</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-12">
                    <div>
                        <span class="text-emerald-700 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block">Mengapa Isyraq Academy?</span>
                        <h2 class="text-4xl md:text-5xl font-display text-emerald-950 mb-6 leading-tight">Membangun Fondasi Keberkahan Melalui <span class="italic text-emerald-600">Pendidikan</span></h2>
                    </div>

                    <div class="space-y-8">
                        {whyUs.map(item => (
                            <div class="flex gap-6 group">
                                <div class="w-12 h-12 rounded-2xl bg-emerald-50 border border-emerald-100 flex items-center justify-center shrink-0 group-hover:bg-emerald-900 group-hover:text-white transition duration-300">
                                    <i data-lucide={item.icon} class="w-6 h-6 text-emerald-700 group-hover:text-white transition duration-300"></i>
                                </div>
                                <div class="space-y-2">
                                    <h4 class="font-bold text-emerald-950 text-lg">{item.title}</h4>
                                    <p class="text-stone-600 text-sm leading-relaxed">{item.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mentors Section -->
    <section class="py-24 bg-emerald-950 px-6 relative overflow-hidden">
         <div class="absolute inset-0 opacity-5" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
         <div class="max-w-7xl mx-auto relative z-10">
             <div class="text-center mb-16">
                 <span class="text-emerald-400 font-bold uppercase tracking-[0.2em] text-[10px] mb-2 block">Tim Ahli Kami</span>
                 <h2 class="text-4xl md:text-5xl font-display text-white italic">Pengajar & Mudaris</h2>
             </div>

             <div class="grid md:grid-cols-3 gap-8">
                 {instructors.map(mentor => (
                     <div class="bg-white/5 border border-white/10 p-8 rounded-[2rem] text-center hover:bg-white/10 transition duration-300">
                         <div class="w-24 h-24 bg-emerald-800 rounded-full mx-auto mb-6 flex items-center justify-center border-4 border-emerald-900 shadow-xl overflow-hidden">
                             {mentor.photo ? (
                                 <img src={urlFor(mentor.photo).width(200).height(200).url()} alt={mentor.name} class="w-full h-full object-cover" />
                             ) : (
                                 <span class="text-white text-4xl font-display font-medium">{mentor.name?.charAt(0) || "U"}</span>
                             )}
                         </div>
                         <h4 class="font-display text-2xl text-white mb-2">{mentor.name}</h4>
                         <p class="text-emerald-400 text-xs font-bold uppercase tracking-widest">{mentor.role}</p>
                      </div>
                  ))}
              </div>
              
              <div class="mt-16 text-center">
                  <p class="text-emerald-200 text-sm italic mb-8">Peluang untuk berbagi ilmu selalu terbuka.</p>
                  <a href="/mentors" class="text-yellow-500 font-bold uppercase tracking-widest text-xs hover:text-yellow-400 transition flex items-center justify-center gap-2">
                      Lihat Semua Pengajar <i data-lucide="plus" class="w-4 h-4"></i>
                  </a>
              </div>
         </div>
    </section>

    <!-- Final CTA -->
    <section class="py-24 bg-white px-6">
        <div class="max-w-5xl mx-auto">
             <div class="bg-emerald-900 rounded-[3rem] p-12 md:p-20 text-center relative overflow-hidden shadow-3xl">
                 <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
                 <div class="absolute top-0 right-0 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
                 
                 <div class="relative z-10">
                    <h2 class="text-4xl md:text-6xl font-display text-white mb-8 leading-tight">
                        {ctaData.title?.split(' ').map((word, i, arr) => i === arr.length - 1 ? <span class="italic text-yellow-500">{word}</span> : word + ' ')}
                    </h2>
                     <p class="text-emerald-200 text-lg md:text-xl max-w-2xl mx-auto mb-12 font-light">
                         {ctaData.description}
                     </p>
                     <div class="flex flex-col sm:flex-row gap-4 justify-center">
                         <a href={ctaData.primaryCta?.link || "/courses"} class="px-10 py-5 bg-yellow-500 text-emerald-950 font-bold uppercase tracking-widest text-xs rounded-full hover:bg-yellow-400 transition-all shadow-xl shadow-yellow-500/20 active:scale-95 duration-200">
                             {ctaData.primaryCta?.text || "Daftar Sekarang"}
                         </a>
                         <a href={ctaData.secondaryCta?.link || "/hubungi-kami"} class="px-10 py-5 border border-white/20 text-white font-bold uppercase tracking-widest text-xs rounded-full hover:bg-white/10 transition-all">
                             {ctaData.secondaryCta?.text || "Konsultasi Pendidikan"}
                         </a>
                     </div>
                 </div>
             </div>
        </div>
    </section>

</AcademyLayout>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-out forwards;
    }
    
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
