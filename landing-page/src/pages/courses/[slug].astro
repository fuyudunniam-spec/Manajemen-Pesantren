---
import AcademyLayout from '../../layouts/AcademyLayout.astro';
import { sanityFetch, queries, urlFor } from '../../lib/sanity';
import { PortableText } from 'astro-portabletext';

export async function getStaticPaths() {
  const courses = await sanityFetch<any[]>(queries.courses);
  return courses.map((course) => ({
    params: { slug: course.slug },
  }));
}

const { slug } = Astro.params;

// Fetch Course Detail from Sanity
const course = await sanityFetch<any>(queries.courseDetail(slug));

if (!course) {
    return Astro.redirect('/404');
}

const hasDiscount = course.discountPrice && course.discountPrice < course.price;
const finalPrice = hasDiscount ? course.discountPrice : (course.price || 0);
const formatPrice = (p) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(p);
const waLink = `https://wa.me/6281234567890?text=${encodeURIComponent(`Assalamualaikum, saya ingin mendaftar kelas *${course.title}*`)}`;

---

<AcademyLayout title={`${course.title} | Isyraq Academy`}>
    
    <!-- Course Hero -->
    <header class="relative bg-royal-950 pt-40 pb-20 px-6 overflow-hidden">
        <div class="absolute inset-0 opacity-10" style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
        <div class="absolute -right-20 top-0 w-1/3 h-full bg-royal-800/20 rounded-bl-[10rem]"></div>
        
        <div class="max-w-7xl mx-auto relative z-10 grid lg:grid-cols-2 gap-16 items-center">
            <div class="space-y-6 animate-fade-in">
                <div class="flex items-center gap-3">
                    <span class="px-4 py-1.5 bg-white/10 border border-white/20 rounded-full text-[10px] font-bold uppercase tracking-[0.2em] text-royal-300">
                        {course.category?.title || 'Academy'}
                    </span>
                    {hasDiscount && (
                        <span class="px-3 py-1 bg-red-600 rounded-full text-[9px] font-bold uppercase tracking-widest text-white shadow-lg">
                            Potongan {Math.round(((course.price - course.discountPrice) / course.price) * 100)}%
                        </span>
                    )}
                </div>
                
                <h1 class="text-4xl md:text-6xl font-display font-medium text-white leading-tight">
                    {course.title}
                </h1>
                
                <p class="text-xl text-royal-200 font-light leading-relaxed max-w-xl">
                    {course.tagline}
                </p>
 
                <div class="flex items-center gap-4 p-4 bg-white/5 border border-white/10 rounded-2xl w-fit">
                    <div class="w-12 h-12 bg-royal-800 rounded-full flex items-center justify-center font-display font-bold text-white text-xl overflow-hidden">
                        {course.instructor?.photo ? (
                            <img src={urlFor(course.instructor.photo).width(100).url()} alt={course.instructor.name} class="w-full h-full object-cover" />
                        ) : (
                            course.instructor?.name?.charAt(0) || 'A'
                        )}
                    </div>
                    <div>
                        <p class="text-[9px] text-royal-400 uppercase tracking-widest font-bold">Instruktur Utama</p>
                        <p class="text-white font-bold">{course.instructor?.name || 'Tim Academy'}</p>
                    </div>
                </div>
            </div>
 
            <!-- Pricing Card -->
            <div class="relative lg:-mb-32 z-20">
                <div class="bg-white rounded-[3rem] p-10 shadow-3xl border border-stone-100 flex flex-col gap-6">
                    <div class="aspect-video bg-royal-50 rounded-[2rem] flex items-center justify-center relative group cursor-pointer overflow-hidden">
                         {course.thumbnail ? (
                             <img 
                                src={urlFor(course.thumbnail).width(600).height(400).url()} 
                                alt={course.title} 
                                class="w-full h-full object-cover group-hover:scale-105 transition duration-700" 
                             />
                         ) : (
                             <i data-lucide="book-open" class="w-20 h-20 text-royal-900/10"></i>
                         )}
                         
                         {course.previewVideoUrl && (
                             <>
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-black/30 transition duration-500 backdrop-blur-[2px]"></div>
                                <i data-lucide="play-circle" class="absolute w-20 h-20 text-white opacity-80 group-hover:scale-110 group-hover:opacity-100 transition duration-300 drop-shadow-xl"></i>
                                <span class="absolute bottom-6 bg-white/20 backdrop-blur-md border border-white/30 text-white text-[10px] font-bold uppercase tracking-widest px-4 py-2 rounded-full shadow-lg">
                                    Tonton Preview
                                </span>
                             </>
                         )}
                    </div>
 
                    <div class="space-y-2">
                        <p class="text-[10px] text-stone-400 uppercase tracking-widest font-bold">Investasi Ilmu</p>
                        <div class="flex items-baseline gap-3">
                            <h3 class="text-4xl font-display font-bold text-royal-950">{formatPrice(finalPrice)}</h3>
                            {hasDiscount && <span class="text-lg text-stone-300 line-through font-light">{formatPrice(course.price)}</span>}
                        </div>
                    </div>
 
                    <div class="space-y-4">
                        <a href={waLink} target="_blank" class="flex items-center justify-center gap-3 w-full py-5 bg-royal-900 text-white rounded-2xl font-bold uppercase tracking-widest text-xs hover:bg-royal-800 transition-all shadow-xl shadow-royal-900/20">
                            <i data-lucide="message-circle" class="w-5 h-5"></i> Daftar via WhatsApp
                        </a>
                        <p class="text-[10px] text-stone-400 text-center uppercase tracking-wider">Akses penuh selamanya â€¢ Garansi kepuasan</p>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4 border-t border-stone-50 pt-6">
                        {course.benefits?.slice(0, 4).map(b => (
                            <div class="flex items-center gap-2 text-[11px] text-stone-600">
                                <i data-lucide="check" class="w-4 h-4 text-royal-600"></i> {b}
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </header>
 
    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-24 lg:py-40 grid lg:grid-cols-3 gap-24">
        <div class="lg:col-span-2 space-y-20">
            
            <section class="space-y-8">
                <h2 class="text-3xl font-display font-bold text-royal-950">Apa yang Akan <span class="italic text-royal-600">Anda Pelajari?</span></h2>
                <div class="prose prose-stone prose-lg max-w-none text-stone-600 font-light leading-relaxed">
                    {course.description ? (
                        <PortableText value={course.description} />
                    ) : (
                        <p>Program ini dirancang khusus untuk memberikan pemahaman mendalam tentang {course.category?.title || 'materi'} secara komprehensif. Melalui pendekatan yang sistematis, Anda akan dibimbing untuk memahami setiap konsep dan aplikasinya dalam kehidupan sehari-hari.</p>
                    )}
                </div>
            </section>
 
            <section class="space-y-10">
                <h2 class="text-3xl font-display font-bold text-royal-950">Silabus & <span class="italic text-royal-600">Kurikulum</span></h2>
                <div class="space-y-6">
                    {course.modules?.map((mod, idx) => (
                        <div class="bg-white rounded-3xl border border-stone-200 overflow-hidden shadow-sm">
                            <div class="px-8 py-6 bg-stone-50 border-b border-stone-100 flex justify-between items-center cursor-pointer hover:bg-white transition duration-300">
                                <div class="flex items-center gap-4">
                                    <span class="w-8 h-8 rounded-full bg-royal-900 text-white flex items-center justify-center font-bold text-xs">{idx + 1}</span>
                                    <h4 class="font-bold text-royal-950">{mod.title}</h4>
                                </div>
                                <i data-lucide="chevron-down" class="w-5 h-5 text-stone-400"></i>
                            </div>
                            <div class="p-4 space-y-1">
                                {mod.lessons?.map(l => (
                                    <a href={`/courses/${slug}/lessons/${l.slug}`} class="flex items-center justify-between px-4 py-4 rounded-xl hover:bg-royal-50 transition duration-300 group">
                                        <div class="flex items-center gap-4">
                                            <i data-lucide="play-circle" class="w-4 h-4 text-royal-300 group-hover:text-royal-600 transition"></i>
                                            <span class="text-sm font-medium text-stone-700 group-hover:text-royal-900 transition">{l.title}</span>
                                        </div>
                                        <span class="text-[10px] text-stone-400 font-bold uppercase tracking-widest group-hover:text-royal-600">Pelajari <i data-lucide="arrow-right" class="w-3 h-3 inline"></i></span>
                                    </a>
                                ))}
                            </div>
                        </div>
                    ))}
                </div>
            </section>
 
        </div>
 
        <!-- Sidebar Info -->
        <aside class="space-y-12">
            <div class="p-8 bg-royal-50 rounded-[2.5rem] border border-royal-100 space-y-6">
                <h4 class="font-display text-2xl text-royal-900">Bergabung Sekarang</h4>
                <p class="text-royal-700 text-sm font-light leading-relaxed">
                    Dapatkan akses eksklusif ke seluruh materi, modul PDF, dan sertifikat resmi dari Isyraq Academy.
                </p>
                <a href={waLink} class="flex items-center justify-center gap-2 group text-royal-900 font-bold text-xs uppercase tracking-widest transition">
                    Tanya Admin Academy <i data-lucide="arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>
 
            <div class="space-y-6">
                <h4 class="text-lg font-display font-bold text-royal-950">Tentang Pengajar</h4>
                <div class="flex items-center gap-4">
                    <div class="w-16 h-16 rounded-full bg-stone-100 flex items-center justify-center text-stone-300 font-display font-bold shrink-0 text-2xl overflow-hidden">
                        {course.instructor?.photo ? (
                            <img src={urlFor(course.instructor.photo).width(200).url()} alt={course.instructor.name} class="w-full h-full object-cover" />
                        ) : (
                            course.instructor?.name?.charAt(0) || 'A'
                        )}
                    </div>
                    <div>
                        <h5 class="font-bold text-royal-950">{course.instructor?.name || 'Tim Academy'}</h5>
                        <p class="text-stone-400 text-xs uppercase tracking-widest font-bold">Mudaris Utama</p>
                    </div>
                </div>
                <p class="text-sm text-stone-600 font-light leading-relaxed">
                    Pengajar dengan jam terbang tinggi dan telah melahirkan ribuan santri yang tersebar di seluruh Indonesia.
                </p>
            </div>
        </aside>
    </main>

</AcademyLayout>
