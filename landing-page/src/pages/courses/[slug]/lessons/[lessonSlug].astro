---
import AcademyLayout from '../../../../layouts/AcademyLayout.astro';

export async function getStaticPaths() {
  return [
    { params: { slug: 'tafsir-al-azhar-modern', lessonSlug: 'pengenalan-tafsir-al-azhar' } },
    { params: { slug: 'tafsir-al-azhar-modern', lessonSlug: 'biografi-hamka-karya' } },
    { params: { slug: 'tafsir-al-azhar-modern', lessonSlug: 'urgensi-tafsir-modern' } },
    { params: { slug: 'tafsir-al-azhar-modern', lessonSlug: 'makna-basmalah' } },
    { params: { slug: 'tafsir-al-azhar-modern', lessonSlug: 'hakikat-hamdalah' } },
    { params: { slug: 'bahasa-arab-klasik-nahwu', lessonSlug: 'isim-fiil-huruf' } },
  ];
}

const { slug, lessonSlug } = Astro.params;

// --- STATIC MOCK DATA FOR LESSON ---
const lesson = {
    title: "Pengenalan & Metodologi Tafsir Al-Azhar",
    type: "video",
    videoUrl: "https://www.youtube.com/embed/dQw4w9WgXcQ", // Mock video
    duration: 15,
    description: "Pertemuan pertama membahas latar belakang penulisan Tafsir Al-Azhar oleh Buya Hamka dan keistimewaannya dibanding tafsir lain.",
    vocabulary: [
        { arabic: "تفسير", transliteration: "Tafsir", meaning: "Penjelasan atau Penafsiran" },
        { arabic: "عقيدة", transliteration: "Aqidah", meaning: "Keyakinan Dasar" },
        { arabic: "منهج", transliteration: "Manhaj", meaning: "Metode / Jalan" },
        { arabic: "بلاغة", transliteration: "Balaghah", meaning: "Sastra / Retorika" }
    ],
    qawaid: [
        { title: "Penggunaan Isim Isyarah", content: "Dalam ayat ini, kata 'dzalika' digunakan untuk menunjukkan keagungan objek yang ditunjuk..." }
    ],
    quiz: [
        { 
            question: "Siapa penulis utama Tafsir Al-Azhar?", 
            options: ["Quraish Shihab", "Buya Hamka", "Sayyid Qutb", "Imam Syafii"],
            correct: 1,
            explanation: "Tafsir Al-Azhar adalah mahakarya Buya Hamka yang ditulis saat beliau berada di penjara."
        }
    ],
    content: `
        <p>Tafsir al-Azhar adalah hasil karya terbesar dari ulama legendaris Indonesia, <strong>Prof. Dr. Haji Abdul Malik Karim Amrullah</strong>, atau yang lebih dikenal dengan julukan Buya Hamka. Nama "Al-Azhar" sendiri diambil dari nama Masjid Agung Al-Azhar di Jakarta, di mana Buya Hamka memberikan ceramah-ceramah tafsirnya.</p>
        <p>Pendekatan yang digunakan dalam tafsir ini adalah <em>Tafsir bi al-Ma'tsur</em> dan <em>Tafsir bi ar-Ra'yi</em> yang diseimbangkan dengan kondisi sosiologis masyarakat Nusantara.</p>
    `
};

const courseTitle = slug.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
---

<AcademyLayout title={`${lesson.title} | ${courseTitle}`}>
    
    <!-- Focus Mode Navbar -->
    <nav class="fixed top-0 w-full z-50 bg-emerald-950 border-b border-white/10 h-16 flex items-center justify-between px-6 shadow-2xl">
        <div class="flex items-center gap-4">
            <a href={`/courses/${slug}`} class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-white hover:bg-white/20 transition">
                <i data-lucide="chevron-left" class="w-5 h-5"></i>
            </a>
            <div class="h-6 w-px bg-white/10"></div>
            <div>
                <h1 class="text-white text-sm font-bold truncate max-w-[200px] md:max-w-md">{lesson.title}</h1>
                <p class="text-[10px] text-emerald-400 uppercase tracking-widest">{courseTitle}</p>
            </div>
        </div>
        <div class="flex items-center gap-4">
            <span class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest hidden md:block">Progress</span>
            <div class="w-24 md:w-32 h-2 bg-emerald-900 rounded-full overflow-hidden">
                <div class="w-[15%] h-full bg-yellow-500 rounded-full"></div>
            </div>
        </div>
    </nav>

    <!-- Main Workspace -->
    <div class="pt-16 min-h-screen bg-stone-100 flex items-stretch overflow-hidden h-screen">
        
        <!-- Left: Main Content (Scrollable) -->
        <div class="flex-1 overflow-y-auto no-scrollbar relative w-full lg:w-3/4">
            <div class="max-w-4xl mx-auto p-6 md:p-10 pb-32 space-y-8">
                
                <!-- Video Section -->
                <div class="aspect-video bg-black rounded-2xl overflow-hidden shadow-2xl border border-stone-200 relative group">
                    <iframe 
                        class="w-full h-full" 
                        src={lesson.videoUrl} 
                        title="Lesson Video" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                    </iframe>
                </div>

                <!-- Action Bar -->
                <div class="flex items-center justify-between py-4 border-b border-stone-200">
                    <div class="flex gap-4">
                        <button class="flex items-center gap-2 px-4 py-2 bg-white border border-stone-200 rounded-full text-xs font-bold text-stone-600 hover:text-emerald-900 hover:border-emerald-500 transition shadow-sm">
                            <i data-lucide="thumbs-up" class="w-4 h-4"></i> Paham
                        </button>
                        <button class="flex items-center gap-2 px-4 py-2 bg-white border border-stone-200 rounded-full text-xs font-bold text-stone-600 hover:text-emerald-900 hover:border-emerald-500 transition shadow-sm">
                            <i data-lucide="help-circle" class="w-4 h-4"></i> Tanya Ustadz
                        </button>
                    </div>
                    <button class="text-stone-400 hover:text-emerald-900 transition">
                        <i data-lucide="share-2" class="w-4 h-4"></i>
                    </button>
                </div>

                <!-- Text Content -->
                <article class="prose prose-stone prose-lg max-w-none text-stone-700 font-serif leading-relaxed">
                    <div dangerouslySetInnerHTML={{ __html: lesson.content }} />
                </article>

                <!-- Qawaid Card -->
                <div class="bg-white rounded-2xl border border- emerald-100 overflow-hidden shadow-sm">
                    <div class="bg-emerald-50/50 px-6 py-4 border-b border-emerald-100 flex items-center justify-between">
                         <h3 class="font-bold text-emerald-900 flex items-center gap-2">
                            <i data-lucide="book-open" class="w-4 h-4"></i> Kaidah & Sastra
                         </h3>
                    </div>
                    <div class="p-6 space-y-4">
                        {lesson.qawaid.map(rule => (
                            <div class="bg-stone-50 p-4 rounded-xl border border-stone-100">
                                <h4 class="font-bold text-stone-900 text-sm mb-2">{rule.title}</h4>
                                <p class="text-sm text-stone-600 leading-relaxed">{rule.content}</p>
                            </div>
                        ))}
                    </div>
                </div>

                <!-- Mini Quiz (Inline) -->
                 <div class="bg-white rounded-2xl border border-stone-200 p-8 shadow-sm">
                    <div class="mb-6">
                        <h3 class="font-bold text-lg text-emerald-950">Uji Pemahaman</h3>
                        <p class="text-stone-500 text-sm">Pastikan Anda memahami poin kunci sebelum lanjut.</p>
                    </div>
                    {lesson.quiz.map((q, i) => (
                        <div class="space-y-4">
                            <p class="font-medium text-stone-800">{i + 1}. {q.question}</p>
                            <div class="grid sm:grid-cols-2 gap-3">
                                {q.options.map((opt, idx) => (
                                    <label class="flex items-center gap-3 p-3 border border-stone-200 rounded-lg cursor-pointer hover:bg-yellow-50 hover:border-yellow-400 transition">
                                        <input type="radio" name={`q-${i}`} class="text-emerald-600 focus:ring-emerald-500" />
                                        <span class="text-sm text-stone-600">{opt}</span>
                                    </label>
                                ))}
                            </div>
                        </div>
                    ))}
                </div>

            </div>
        </div>

        <!-- Right: Tools Sidebar (Fixed) -->
        <aside class="w-96 bg-white border-l border-stone-200 hidden lg:flex flex-col h-full shadow-xl z-20">
            <!-- Sidebar Tabs -->
            <div class="flex border-b border-stone-200" x-data="{ tab: 'vocab' }">
                <button 
                    id="tab-vocab"
                    class="flex-1 py-4 text-xs font-bold uppercase tracking-widest text-emerald-900 border-b-2 border-emerald-900 bg-emerald-50/50"
                    onclick="switchTab('vocab')">
                    Mufradat
                </button>
                <button 
                    id="tab-notes"
                    class="flex-1 py-4 text-xs font-bold uppercase tracking-widest text-stone-400 border-b-2 border-transparent hover:text-emerald-900 hover:bg-stone-50"
                    onclick="switchTab('notes')">
                    Catatan
                </button>
            </div>

            <!-- Tab Content Area -->
            <div class="flex-1 overflow-y-auto p-6 space-y-6" id="sidebar-content">
                
                <!-- VACABULARY TAB -->
                <div id="content-vocab" class="space-y-4 animate-fade-in">
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="text-sm font-bold text-stone-400 uppercase tracking-widest">Kosa Kata Baru</h4>
                        <button class="text-emerald-600 hover:text-emerald-800"><i data-lucide="play-circle" class="w-4 h-4"></i></button>
                    </div>
                    <div class="space-y-3">
                         {lesson.vocabulary.map(v => (
                            <div class="p-4 rounded-xl border border-stone-100 hover:border-emerald-200 hover:shadow-md transition bg-white group cursor-pointer">
                                 <div class="flex justify-between items-start mb-2">
                                     <span class="font-serif text-2xl text-emerald-900" dir="rtl">{v.arabic}</span>
                                     <i data-lucide="volume-2" class="w-3.5 h-3.5 text-stone-300 group-hover:text-emerald-500 transition"></i>
                                 </div>
                                 <p class="text-[10px] font-bold text-stone-400 uppercase tracking-wider mb-1">{v.transliteration}</p>
                                 <p class="text-sm text-stone-700 font-medium">{v.meaning}</p>
                            </div>
                        ))}
                    </div>
                </div>

                <!-- NOTES TAB (Hidden by default via JS) -->
                <div id="content-notes" class="hidden space-y-4 animate-fade-in">
                    <div class="bg-yellow-50 rounded-xl p-4 border border-yellow-200">
                        <textarea 
                            class="w-full h-64 bg-transparent border-none p-0 text-sm text-stone-700 focus:ring-0 placeholder:text-stone-400 leading-relaxed resize-none"
                            placeholder="Tulis catatan Anda di sini... (Otomatis tersimpan)"></textarea>
                    </div>
                    <p class="text-xs text-stone-400 text-center">Terakhir disimpan: Barusan</p>
                </div>

            </div>

            <!-- Next Lesson Sticky Footer -->
            <div class="p-4 border-t border-stone-200 bg-stone-50">
                 <a href="#" class="flex items-center justify-between p-4 bg-emerald-900 text-white rounded-xl shadow-lg hover:bg-emerald-800 transition group">
                    <div>
                        <p class="text-[9px] text-emerald-400 uppercase tracking-widest font-bold mb-1">Selanjutnya</p>
                        <p class="text-sm font-bold truncate w-48">Biografi Buya Hamka</p>
                    </div>
                    <i data-lucide="arrow-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>
        </aside>

    </div>

    <!-- Mobile Tools Toggle (FAB) -->
    <button class="lg:hidden fixed bottom-6 right-6 w-14 h-14 bg-emerald-900 text-white rounded-full shadow-2xl flex items-center justify-center z-50 border-2 border-emerald-700">
        <i data-lucide="layers" class="w-6 h-6"></i>
    </button>

</AcademyLayout>

<script is:inline>
    function switchTab(tabName) {
        // Reset Tabs
        document.getElementById('tab-vocab').className = "flex-1 py-4 text-xs font-bold uppercase tracking-widest text-stone-400 border-b-2 border-transparent hover:text-emerald-900 hover:bg-stone-50 cursor-pointer";
        document.getElementById('tab-notes').className = "flex-1 py-4 text-xs font-bold uppercase tracking-widest text-stone-400 border-b-2 border-transparent hover:text-emerald-900 hover:bg-stone-50 cursor-pointer";
        
        // Activate Tab
        document.getElementById(`tab-${tabName}`).className = "flex-1 py-4 text-xs font-bold uppercase tracking-widest text-emerald-900 border-b-2 border-emerald-900 bg-emerald-50/50 cursor-pointer";

        // Toggle Content
        document.getElementById('content-vocab').classList.add('hidden');
        document.getElementById('content-notes').classList.add('hidden');
        document.getElementById(`content-${tabName}`).classList.remove('hidden');
    }
</script>

<style>
    /* Hide Academy Layout Header/Footer for this immersive mode */
    :global(#navbar), :global(footer) {
        display: none !important;
    }
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>
