---
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academy | Al-Bisri Royal Education</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Cinzel:wght@400;500;600;700;800&display=swap"
        rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        royal: { 50: '#f0fdf4', 100: '#dcfce7', 800: '#166534', 900: '#14532d', 950: '#052e16' },
                        gold: { 100: '#fef9c3', 400: '#d4af37', 500: '#b4941f', 600: '#8c7318' },
                        paper: '#FAFAF9',
                    },
                    fontFamily: {
                        sans: ['Cormorant Garamond', 'serif'],
                        display: ['Cinzel', 'serif'],
                    },
                    borderRadius: { '4xl': '2.5rem', '5xl': '3rem' }
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #FAFAF9;
            color: #1c1917;
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.15rem;
        }
        .royal-pattern {
            background-color: #FAFAF9;
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23166534' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2V6h4V4h-4zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }
    </style>
</head>

<body class="antialiased royal-pattern">
    <Navigation activeRoute="/akademi" />

    <!-- HERO -->
    <section class="relative py-20 overflow-hidden bg-royal-900">
        <div class="absolute inset-0 opacity-10"
            style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <div class="text-center">
                <span class="text-gold-400 font-bold uppercase tracking-[0.2em] text-xs">Didukung Isyraq Annur Media</span>
                <h1 class="text-5xl md:text-6xl font-display text-white mt-4 mb-6">Al-Bisri <span class="italic text-gold-400">Academy</span></h1>
                <p class="text-royal-200 max-w-2xl mx-auto text-lg font-light leading-relaxed">
                    Platform e-learning Bahasa Arab dan Ilmu Keislaman standar Timur Tengah. 
                    Dikembangkan oleh tim ahli Pesantren Mahasiswa An-Nur.
                </p>
            </div>
        </div>
    </section>

    <!-- PROGRAMS GRID -->
    <section class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-16">
                <span class="text-gold-600 font-bold uppercase tracking-widest text-xs">Kurikulum</span>
                <h2 class="text-4xl font-display text-royal-900 mt-2">Program Pembelajaran</h2>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Al-Arabiyyah Program -->
                <a href="/akademi/al-arabiyyah-level-1" class="group bg-stone-50 rounded-[2rem] p-8 border border-stone-100 hover:border-gold-400 hover:shadow-xl transition duration-500 hover:-translate-y-2">
                    <div class="w-16 h-16 bg-royal-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-royal-900 transition">
                        <i data-lucide="book-open" class="w-8 h-8 text-royal-800 group-hover:text-gold-400 transition"></i>
                    </div>
                    <span class="text-xs font-bold text-gold-600 uppercase tracking-widest mb-2 block">Level 1 - Mubtadi'</span>
                    <h3 class="text-2xl font-display text-royal-900 mb-3 group-hover:text-gold-600 transition">Al-Arabiyyah Lil Nasyi'in</h3>
                    <p class="text-stone-600 text-sm leading-relaxed mb-6">
                        Kurikulum Bahasa Arab untuk pemula dengan metode modern dari Timur Tengah.
                    </p>
                    <div class="flex items-center justify-between text-xs text-stone-400 font-bold uppercase">
                        <span>12 Unit â€¢ 36 Video</span>
                        <span class="text-gold-600 flex items-center gap-1">Mulai <i data-lucide="arrow-right" class="w-3 h-3"></i></span>
                    </div>
                </a>

                <!-- Nahwu Shorof -->
                <div class="group bg-stone-50 rounded-[2rem] p-8 border border-stone-100 relative overflow-hidden opacity-70">
                    <div class="absolute top-4 right-4 bg-stone-200 text-stone-500 text-[10px] font-bold uppercase px-3 py-1 rounded-full">Segera Hadir</div>
                    <div class="w-16 h-16 bg-stone-200 rounded-2xl flex items-center justify-center mb-6">
                        <i data-lucide="scroll-text" class="w-8 h-8 text-stone-400"></i>
                    </div>
                    <span class="text-xs font-bold text-stone-400 uppercase tracking-widest mb-2 block">Dasar Gramatika</span>
                    <h3 class="text-2xl font-display text-stone-500 mb-3">Nahwu & Shorof</h3>
                    <p class="text-stone-400 text-sm leading-relaxed mb-6">
                        Pelajari struktur dan morfologi Bahasa Arab secara sistematis.
                    </p>
                    <div class="flex items-center justify-between text-xs text-stone-400 font-bold uppercase">
                        <span>Coming Soon</span>
                        <i data-lucide="lock" class="w-4 h-4"></i>
                    </div>
                </div>

                <!-- Fiqh Muamalah -->
                <div class="group bg-stone-50 rounded-[2rem] p-8 border border-stone-100 relative overflow-hidden opacity-70">
                    <div class="absolute top-4 right-4 bg-stone-200 text-stone-500 text-[10px] font-bold uppercase px-3 py-1 rounded-full">Segera Hadir</div>
                    <div class="w-16 h-16 bg-stone-200 rounded-2xl flex items-center justify-center mb-6">
                        <i data-lucide="scale" class="w-8 h-8 text-stone-400"></i>
                    </div>
                    <span class="text-xs font-bold text-stone-400 uppercase tracking-widest mb-2 block">Ekonomi Syariah</span>
                    <h3 class="text-2xl font-display text-stone-500 mb-3">Fiqh Muamalah</h3>
                    <p class="text-stone-400 text-sm leading-relaxed mb-6">
                        Hukum-hukum transaksi dan ekonomi dalam perspektif Islam.
                    </p>
                    <div class="flex items-center justify-between text-xs text-stone-400 font-bold uppercase">
                        <span>Coming Soon</span>
                        <i data-lucide="lock" class="w-4 h-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURES -->
    <section class="py-20 bg-stone-50 border-y border-stone-200">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-4 gap-8 text-center">
                <div>
                    <div class="w-12 h-12 bg-royal-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="video" class="w-6 h-6 text-royal-800"></i>
                    </div>
                    <h4 class="font-bold text-royal-900 mb-2">Video Interaktif</h4>
                    <p class="text-sm text-stone-500">Penjelasan visual berkualitas HD</p>
                </div>
                <div>
                    <div class="w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="pen-tool" class="w-6 h-6 text-gold-600"></i>
                    </div>
                    <h4 class="font-bold text-royal-900 mb-2">Latihan Soal</h4>
                    <p class="text-sm text-stone-500">Ujian setiap akhir unit</p>
                </div>
                <div>
                    <div class="w-12 h-12 bg-royal-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="book" class="w-6 h-6 text-royal-800"></i>
                    </div>
                    <h4 class="font-bold text-royal-900 mb-2">Mufrodat Digital</h4>
                    <p class="text-sm text-stone-500">Kamus kosakata terintegrasi</p>
                </div>
                <div>
                    <div class="w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="headphones" class="w-6 h-6 text-gold-600"></i>
                    </div>
                    <h4 class="font-bold text-royal-900 mb-2">Audio Native</h4>
                    <p class="text-sm text-stone-500">Pelafalan standar Arab</p>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <script>
        lucide.createIcons();
    </script>
</body>

</html>
