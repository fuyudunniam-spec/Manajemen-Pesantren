---
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { client, queries, urlFor } from '../../lib/sanity';

// Fetch blog data from Sanity
let posts: any[] = [];
let categories: any[] = [];
let featuredPost: any = null;

try {
    [posts, categories, featuredPost] = await Promise.all([
        client.fetch(queries.blogPosts),
        client.fetch(queries.blogCategories),
        client.fetch(queries.featuredPost),
    ]);
} catch (error) {
    console.error('Failed to fetch blog data from Sanity:', error);
}

// Filter out featured post from regular list
const regularPosts = posts.filter((p: any) => p._id !== featuredPost?._id);

// Color mapping for categories
const colorClasses: Record<string, string> = {
    royal: 'bg-royal-100 text-royal-900',
    gold: 'bg-gold-100 text-gold-800',
    red: 'bg-red-600 text-white',
    blue: 'bg-blue-100 text-blue-800',
    stone: 'bg-stone-100 text-stone-600',
};

function formatDate(dateString: string) {
    return new Date(dateString).toLocaleDateString('id-ID', {
        day: 'numeric',
        month: 'short',
        year: 'numeric',
    });
}
---

<!DOCTYPE html>
<html lang="id" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kabar & Pemikiran | Al-Bisri Newsroom</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Cinzel:wght@400;500;600;700;800&family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        royal: { 50: '#f0fdf4', 100: '#dcfce7', 800: '#166534', 900: '#14532d', 950: '#052e16' },
                        gold: { 100: '#fef9c3', 400: '#d4af37', 500: '#b4941f', 600: '#8c7318' },
                    },
                    fontFamily: {
                        serif: ['Cormorant Garamond', 'serif'],
                        display: ['Cinzel', 'serif'],
                        sans: ['Plus Jakarta Sans', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <style>
        body {
            background-color: #FAFAF9;
            color: #1c1917;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }
        .royal-pattern {
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23166534' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2V6h4V4h-4zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }
        .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
        .line-clamp-3 { display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
    </style>
</head>

<body class="antialiased royal-pattern">
    <Navigation activeRoute="/berita" />

    <!-- HEADER -->
    <header class="py-20 px-6 text-center border-b border-stone-200 bg-white relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-royal-900 via-gold-400 to-royal-900"></div>
        <div class="max-w-4xl mx-auto relative z-10">
            <span class="text-gold-600 font-bold uppercase tracking-[0.2em] text-xs mb-4 block">Jendela Informasi & Pemikiran</span>
            <h1 class="text-4xl md:text-6xl font-display text-royal-900 mb-6">Kabar Al-Bisri</h1>

            <!-- Category Filter -->
            <div class="flex flex-wrap justify-center gap-3 mt-8">
                <button class="category-filter px-6 py-2 rounded-full bg-royal-900 text-white text-xs font-bold uppercase tracking-wider shadow-lg" data-category="all">
                    Semua
                </button>
                {categories.map((cat: any) => (
                    <button 
                        class="category-filter px-6 py-2 rounded-full border border-stone-200 text-stone-500 hover:text-royal-900 hover:border-royal-900 text-xs font-bold uppercase tracking-wider transition"
                        data-category={cat.slug?.current}
                    >
                        {cat.name}
                    </button>
                ))}
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="max-w-7xl mx-auto px-6 py-16">
        {/* Featured Post */}
        {featuredPost && (
            <a href={`/berita/${featuredPost.slug?.current}`}
                class="group block relative rounded-[2.5rem] overflow-hidden shadow-xl mb-16 aspect-[21/9] md:aspect-[21/8]">
                {featuredPost.featuredImage && (
                    <img src={urlFor(featuredPost.featuredImage).width(2000).height(800).url()}
                        alt={featuredPost.featuredImage.alt || featuredPost.title}
                        class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-105">
                )}
                <div class="absolute inset-0 bg-gradient-to-t from-royal-950/90 via-royal-950/40 to-transparent"></div>
                <div class="absolute bottom-0 left-0 p-8 md:p-12 w-full md:w-2/3">
                    <span class="inline-block py-1 px-3 rounded-full bg-gold-500 text-royal-900 text-[10px] font-bold uppercase tracking-wider mb-4">
                        {featuredPost.category?.name || 'Headline'}
                    </span>
                    <h2 class="text-3xl md:text-5xl font-display text-white mb-4 leading-tight group-hover:text-gold-300 transition">
                        {featuredPost.title}
                    </h2>
                    <p class="text-royal-100 text-sm md:text-base line-clamp-2 mb-6 font-serif">
                        {featuredPost.excerpt}
                    </p>
                    <span class="text-white text-xs font-bold uppercase tracking-widest flex items-center gap-2">
                        Baca Selengkapnya <i data-lucide="arrow-right" class="w-4 h-4"></i>
                    </span>
                </div>
            </a>
        )}

        {/* Posts Grid */}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12" id="posts-grid">
            {regularPosts.length > 0 ? (
                regularPosts.map((post: any) => (
                    <article class="group cursor-pointer post-card" data-category={post.category?.slug?.current}>
                        <a href={`/berita/${post.slug?.current}`}>
                            <div class="aspect-video rounded-2xl overflow-hidden mb-6 relative">
                                {post.featuredImage && (
                                    <img src={urlFor(post.featuredImage).width(800).height(450).url()}
                                        alt={post.featuredImage.alt || post.title}
                                        class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
                                )}
                                <span class={`absolute top-4 left-4 backdrop-blur px-3 py-1 rounded-lg text-[10px] font-bold uppercase tracking-wide ${colorClasses[post.category?.color] || 'bg-white/90 text-royal-900'}`}>
                                    {post.category?.name || 'Berita'}
                                </span>
                            </div>
                            <div class="pr-4">
                                <span class="text-xs text-stone-400 font-bold uppercase mb-2 block">{formatDate(post.publishedAt)}</span>
                                <h3 class="text-xl font-display text-royal-900 mb-3 leading-snug group-hover:text-gold-600 transition">
                                    {post.title}
                                </h3>
                                <p class="text-stone-500 text-sm line-clamp-3 font-serif leading-relaxed">
                                    {post.excerpt}
                                </p>
                            </div>
                        </a>
                    </article>
                ))
            ) : (
                <div class="col-span-3 text-center py-20">
                    <i data-lucide="file-text" class="w-16 h-16 text-stone-300 mx-auto mb-4"></i>
                    <h3 class="text-xl font-display text-stone-500 mb-2">Belum Ada Artikel</h3>
                    <p class="text-stone-400">Artikel pertama segera hadir!</p>
                </div>
            )}
        </div>

        {/* Pagination placeholder */}
        {regularPosts.length > 6 && (
            <div class="mt-20 flex justify-center gap-2">
                <button class="w-10 h-10 rounded-full border border-stone-200 flex items-center justify-center text-stone-400 hover:bg-royal-900 hover:text-white transition">
                    <i data-lucide="chevron-left" class="w-4 h-4"></i>
                </button>
                <button class="w-10 h-10 rounded-full bg-royal-900 text-white flex items-center justify-center text-sm font-bold shadow-lg">1</button>
                <button class="w-10 h-10 rounded-full border border-stone-200 flex items-center justify-center text-stone-400 hover:bg-royal-900 hover:text-white transition">
                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                </button>
            </div>
        )}
    </main>

    <Footer />

    <script>
        lucide.createIcons();

        // Category filtering
        document.querySelectorAll('.category-filter').forEach(btn => {
            btn.addEventListener('click', function() {
                const category = this.dataset.category;
                
                // Update button styles
                document.querySelectorAll('.category-filter').forEach(b => {
                    b.classList.remove('bg-royal-900', 'text-white', 'shadow-lg');
                    b.classList.add('border', 'border-stone-200', 'text-stone-500');
                });
                this.classList.remove('border', 'border-stone-200', 'text-stone-500');
                this.classList.add('bg-royal-900', 'text-white', 'shadow-lg');

                // Filter posts
                document.querySelectorAll('.post-card').forEach(card => {
                    if (category === 'all' || card.dataset.category === category) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>

</html>
