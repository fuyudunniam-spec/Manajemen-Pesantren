---
import { getAllBlogPosts } from '../../lib/sanity';

const posts = await getAllBlogPosts();
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Isyraq Annur</title>
</head>
<body class="bg-[#FDFBF7] text-[#2D3A18]">
    <div class="max-w-7xl mx-auto px-4 py-16">
        <!-- Header -->
        <div class="text-center mb-16">
            <h1 class="text-5xl font-serif font-bold text-[#2D3A18] mb-4">
                Blog & Artikel
            </h1>
            <p class="text-lg text-[#2D3A18]/70 max-w-2xl mx-auto">
                Pemikiran, berita kegiatan, dan literasi filantropi dari Pesantren Isyraq Annur
            </p>
        </div>

        <!-- Blog Posts Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post: any) => (
                <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
                    {post.mainImage && (
                        <img 
                            src={post.mainImage} 
                            alt={post.title}
                            class="w-full h-48 object-cover"
                        />
                    )}
                    
                    <div class="p-6">
                        {post.categories && post.categories.length > 0 && (
                            <div class="flex gap-2 mb-3">
                                {post.categories.map((cat: string) => (
                                    <span class="text-xs px-3 py-1 bg-[#B8860B]/10 text-[#B8860B] rounded-full">
                                        {cat}
                                    </span>
                                ))}
                            </div>
                        )}
                        
                        <h2 class="text-2xl font-serif font-bold text-[#2D3A18] mb-3 hover:text-[#B8860B] transition-colors">
                            <a href={`/blog/${post.slug.current}`}>
                                {post.title}
                            </a>
                        </h2>
                        
                        {post.excerpt && (
                            <p class="text-[#2D3A18]/70 mb-4 line-clamp-3">
                                {post.excerpt}
                            </p>
                        )}
                        
                        <div class="flex items-center justify-between text-sm text-[#2D3A18]/60">
                            {post.author && (
                                <span class="font-medium">oleh {post.author}</span>
                            )}
                            {post.publishedAt && (
                                <time>
                                    {new Date(post.publishedAt).toLocaleDateString('id-ID', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                            )}
                        </div>
                    </div>
                </article>
            ))}
        </div>

        {posts.length === 0 && (
            <div class="text-center py-16">
                <p class="text-xl text-[#2D3A18]/60">
                    Belum ada artikel yang dipublikasikan.
                </p>
            </div>
        )}
    </div>
</body>
</html>
