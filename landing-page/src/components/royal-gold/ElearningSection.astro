---
// E-Learning Section
const { elearning } = Astro.props;
---

{elearning && (
    <section id="elearning" class="py-24 royal-pattern">
        <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-16 items-center">
            <!-- Left: Content -->
            <div class="fade-up">
                {elearning.badge && (
                    <span class="inline-block px-4 py-1 bg-royal-900 text-gold-400 text-[10px] uppercase tracking-[0.3em] mb-6 rounded">
                        {elearning.badge}
                    </span>
                )}
                
                {elearning.title && elearning.titleHighlight && (
                    <h2 class="text-4xl md:text-5xl font-display font-bold text-royal-950 mb-6">
                        {elearning.title} <span class="italic text-gold-600 font-serif">{elearning.titleHighlight}</span>
                    </h2>
                )}
                
                {elearning.description && (
                    <p class="text-lg text-stone-700 leading-relaxed mb-8">
                        {elearning.description}
                    </p>
                )}
                
                {elearning.ctaText && (
                    <a 
                        href={elearning.ctaLink || '#'} 
                        class="inline-flex items-center gap-3 px-8 py-4 bg-royal-900 text-white rounded-full font-bold uppercase tracking-widest text-sm hover:bg-royal-800 transition shadow-lg group"
                    >
                        {elearning.ctaText}
                        <i data-lucide="external-link" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                    </a>
                )}
            </div>
            
            <!-- Right: Preview Image -->
            <div class="relative fade-up delay-200">
                {elearning.previewImage?.asset ? (
                    <div class="relative rounded-2xl overflow-hidden shadow-2xl border-8 border-white">
                        <img 
                            src={`${elearning.previewImage.asset.url}?w=800&h=600&fit=crop`}
                            alt={elearning.previewImage.alt || 'E-Learning preview'}
                            class="w-full h-auto"
                        />
                        
                        <!-- Play Button Overlay -->
                        <div class="absolute inset-0 bg-royal-900/40 flex items-center justify-center group-hover:bg-royal-900/50 transition">
                            <div class="w-20 h-20 rounded-full bg-gold-500 flex items-center justify-center shadow-2xl hover:scale-110 transition-transform cursor-pointer">
                                <i data-lucide="play" class="w-10 h-10 text-royal-950 ml-1"></i>
                            </div>
                        </div>
                    </div>
                ) : (
                    <div class="aspect-video bg-gradient-to-br from-royal-900 to-royal-800 rounded-2xl flex items-center justify-center border-8 border-white shadow-2xl">
                        <i data-lucide="video" class="w-24 h-24 text-gold-400"></i>
                    </div>
                )}
            </div>
        </div>
    </section>
)}

<script>
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
</script>
