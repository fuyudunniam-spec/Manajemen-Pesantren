---
// Donation CTA Section with Zakat Calculator & Wakaf Packages
const { donationCTA } = Astro.props;
---

{donationCTA && (
    <section class="py-24 bg-royal-950 text-white relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute inset-0 royal-pattern"></div>
        </div>
        
        <div class="max-w-7xl mx-auto px-6 relative z-10">
            <!-- Header -->
            <div class="text-center mb-16 fade-up">
                {donationCTA.title && (
                    <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
                        {donationCTA.title}
                    </h2>
                )}
                
                {donationCTA.subtitle && (
                    <p class="text-lg text-stone-300 max-w-2xl mx-auto">
                        {donationCTA.subtitle}
                    </p>
                )}
            </div>
            
            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Left: Zakat Calculator -->
                {donationCTA.zakatCalculator && (
                    <div class="glass-panel-dark p-8 rounded-2xl fade-up">
                        <h3 class="text-2xl font-display font-bold text-white mb-6">
                            {donationCTA.zakatCalculator.title || 'Kalkulator Zakat'}
                        </h3>
                        
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm text-stone-300 mb-2 uppercase tracking-wider">
                                    {donationCTA.zakatCalculator.inputLabel || 'Total Harta (Rp)'}
                                </label>
                                <input 
                                    type="number" 
                                    id="zakatInput" 
                                    class="w-full px-4 py-3 rounded-lg bg-royal-900/50 border border-gold-500/30 text-white placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-gold-500"
                                    placeholder="Contoh: 100000000"
                                />
                            </div>
                            
                            <button 
                                id="calculateZakat"
                                class="w-full px-6 py-3 bg-gold-500 text-royal-950 rounded-lg font-bold uppercase tracking-widest hover:bg-gold-400 transition"
                            >
                                {donationCTA.zakatCalculator.buttonText || 'Hitung Zakat'}
                            </button>
                            
                            <div id="zakatResult" class="hidden mt-6 p-6 bg-gold-500/10 border border-gold-500/30 rounded-lg">
                                <p class="text-sm text-stone-300 mb-2">Zakat Mal (2.5%):</p>
                                <p class="text-4xl font-display font-bold text-gold-400" id="zakatAmount">Rp 0</p>
                            </div>
                        </div>
                    </div>
                )}
                
                <!-- Right: Wakaf Packages -->
                {donationCTA.wakafPackages && donationCTA.wakafPackages.packages && (
                    <div class="fade-up delay-200">
                        <h3 class="text-2xl font-display font-bold text-white mb-6">
                            {donationCTA.wakafPackages.title || 'Paket Wakaf'}
                        </h3>
                        
                        <div class="space-y-4">
                            {donationCTA.wakafPackages.packages.map((pkg: any) => (
                                <a 
                                    href={`/donasi?package=${pkg.name?.toLowerCase().replace(/\s+/g, '-')}&amount=${pkg.amount}`}
                                    class="block glass-panel-dark p-6 rounded-xl hover:border-gold-500 border border-transparent transition-all group"
                                >
                                    <div class="flex justify-between items-start mb-2">
                                        <div>
                                            <h4 class="text-xl font-bold text-white group-hover:text-gold-400 transition">
                                                {pkg.name}
                                            </h4>
                                            {pkg.description && (
                                                <p class="text-sm text-stone-300 mt-1">{pkg.description}</p>
                                            )}
                                        </div>
                                        <i data-lucide="arrow-right" class="w-5 h-5 text-gold-400 group-hover:translate-x-1 transition-transform"></i>
                                    </div>
                                    
                                    <p class="text-3xl font-display font-bold text-gold-400 mt-4">
                                        Rp {pkg.amount?.toLocaleString('id-ID')}
                                    </p>
                                </a>
                            ))}
                        </div>
                    </div>
                )}
            </div>
        </div>
    </section>
)}

<script>
    // Zakat Calculator Logic
    const calculateBtn = document.getElementById('calculateZakat');
    const zakatInput = document.getElementById('zakatInput') as HTMLInputElement;
    const zakatResult = document.getElementById('zakatResult');
    const zakatAmount = document.getElementById('zakatAmount');
    
    calculateBtn?.addEventListener('click', () => {
        const totalHarta = parseFloat(zakatInput?.value || '0');
        if (totalHarta > 0) {
            const zakat = totalHarta * 0.025; // 2.5%
            if (zakatAmount) {
                zakatAmount.textContent = `Rp ${zakat.toLocaleString('id-ID')}`;
            }
            zakatResult?.classList.remove('hidden');
        }
    });
    
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
</script>
