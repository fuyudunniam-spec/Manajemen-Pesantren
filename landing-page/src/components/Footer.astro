---
import { sanityClient } from '../lib/sanity';

const query = `*[_type == "siteSettings"][0] {
  footerNavigation,
  socialLinks,
  contactInfo
}`;

const settings = await sanityClient.fetch(query);
const currentYear = new Date().getFullYear();
---

<footer class="bg-primary text-white pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand / About -->
      <div class="space-y-4">
        <h3 class="font-serif text-2xl font-bold">Al-Bisri</h3>
        <p class="text-gray-300 leading-relaxed text-sm">
          Membangun generasi Qur'ani yang mandiri, berwawasan global, dan berakhlak mulia melalui pendidikan pesantren modern.
        </p>
        <div class="flex space-x-4 pt-2">
            <!-- Social Placeholder -->
            <a href="#" class="bg-white/10 p-2 rounded-full hover:bg-secondary hover:text-white transition-colors">
                <span class="sr-only">Facebook</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path></svg>
            </a>
            <a href="#" class="bg-white/10 p-2 rounded-full hover:bg-secondary hover:text-white transition-colors">
                 <span class="sr-only">Instagram</span>
                 <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.153-1.772 4.902 4.902 0 01-1.772-1.153c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772 4.902 4.902 0 011.772-1.153c.636-.247 1.363-.416 2.427-.465 1.067-.047 1.407-.06 4.123-.06h.08zm-1.63 2h-1.63c-3.151 0-4.09 1.258-4.316 3.738l-.004.284v1.62c0 3.033 1.171 4.17 4.32 4.18l.267.001h1.644c3.082 0 4.225-1.15 4.316-4.18l.004-.265v-1.646c0-3.08-1.144-4.223-4.32-4.314L10.685 4zm1.487 7.7a3.834 3.834 0 110-7.668 3.834 3.834 0 010 7.668zm0-6.168a2.334 2.334 0 100 4.668 2.334 2.334 0 000-4.668z" clip-rule="evenodd"></path></svg>
            </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="font-serif text-lg font-medium text-secondary">Tautan Cepat</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="#" class="hover:text-white transition-colors">Profil Pesantren</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Program Pendidikan</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Berita Terkini</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Informasi PSB</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Galeri Kegiatan</a></li>
        </ul>
      </div>

      <!-- Programs -->
       <div class="space-y-4">
        <h4 class="font-serif text-lg font-medium text-secondary">Program Unggulan</h4>
        <ul class="space-y-2 text-sm text-gray-300">
          <li><a href="#" class="hover:text-white transition-colors">Tahfidz Al-Qur'an</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Kajian Kitab Kuning</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Entrepreneurship Santri</a></li>
          <li><a href="#" class="hover:text-white transition-colors">Bahasa Asing (Arab & Inggris)</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="space-y-4">
         <h4 class="font-serif text-lg font-medium text-secondary">Hubungi Kami</h4>
         <div class="space-y-3 text-sm text-gray-300">
            <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                <span>{settings?.contactInfo?.address || 'Jl. Raya Pesantren No. 123, Kota, Provinisi'}</span>
            </div>
             <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                <span>{settings?.contactInfo?.email || 'info@albisri.com'}</span>
            </div>
             <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                <span>{settings?.contactInfo?.phone || '+62 812 3456 7890'}</span>
            </div>
         </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/10 pt-8 mt-8 text-center text-sm text-gray-400">
      <p>&copy; {currentYear} Pesantren Al-Bisri. All rights reserved.</p>
    </div>
  </div>
</footer>
