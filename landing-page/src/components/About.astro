---
interface Props {
  title?: string;
  content?: string;
  stats?: Array<{ label: string, value: string }>;
  image?: string;
}

const { 
  title = "Adab Sebelum Ilmu", 
  content = "Di Al-Bisri, kami percaya bahwa karakter adalah fondasi utama peradaban. Santri tidak hanya diajak menghafal Al-Qur'an, tetapi mencernanya menjadi perilaku.",
  stats = [],
  image
} = Astro.props;
---

<section id="about" class="py-24 px-6 bg-background relative overflow-hidden">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
    
    <div class="space-y-8">
      <div class="inline-block border-l-4 border-secondary pl-4">
        <h2 class="font-serif text-4xl md:text-5xl text-[#2D3A18] font-bold">{title}</h2>
        <p class="text-secondary font-medium mt-2 tracking-wide uppercase text-sm">Filosofi Pendidikan Kami</p>
      </div>
      
      <p class="text-lg text-[#2D3A18]/80 leading-relaxed font-sans">
        {content}
      </p>

      {stats.length > 0 ? (
        <div class="grid grid-cols-2 gap-6 pt-4">
          {stats.map((stat) => (
            <div class="space-y-1">
              <div class="text-3xl font-serif font-bold text-[#B8860B]">{stat.value}</div>
              <div class="text-sm text-[#2D3A18]/60 uppercase tracking-wider font-medium">{stat.label}</div>
            </div>
          ))}
        </div>
      ) : (
        <ul class="space-y-4">
          {['Kurikulum Berbasis Adab', 'Hafalan Al-Quran 30 Juz', 'Enterpreneurship Skill'].map((item) => (
            <li class="flex items-center gap-3 text-[#2D3A18]/90 font-medium">
              <span class="w-2 h-2 rounded-full bg-secondary"></span>
              {item}
            </li>
          ))}
        </ul>
      )}
      
      <div class="pt-4">
        <a href="#programs" class="text-secondary hover:text-secondary/80 font-medium border-b border-secondary/30 hover:border-secondary transition-all">
          Pelajari Kurikulum Selengkapnya â†’
        </a>
      </div>
    </div>

    <div class="relative">
      <div class="aspect-[4/5] rounded-tl-[100px] rounded-br-[100px] overflow-hidden bg-[#2D3A18]/5 relative z-10 shadow-2xl">
        {image ? (
          <img src={image} alt={title} class="w-full h-full object-cover" />
        ) : (
          <div class="w-full h-full flex items-center justify-center text-[#2D3A18]/20">
              [Unggah Gambar di Sanity]
          </div>
        )}
      </div>
      <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-secondary/10 rounded-full blur-3xl -z-0"></div>
    </div>
    
  </div>
</section>
