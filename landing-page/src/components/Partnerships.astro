---
interface Partner {
  _id: string;
  name: string;
  logo: string;
  website?: string;
}

interface Props {
  partners?: Partner[];
  partnersTitle?: string;
}

const { 
  partners = [], 
  partnersTitle = "Dipercaya Oleh Institusi & Komunitas" 
} = Astro.props;

// Duplicate partners for infinite scroll effect if there are few
const marqueePartners = partners.length > 0 ? [...partners, ...partners, ...partners] : [];
---

<section id="partners" class="py-10 bg-white border-b border-gray-100 overflow-hidden">
  <div class="text-center mb-6">
    <h2 class="font-serif text-lg font-bold text-primary/80 uppercase tracking-widest">{partnersTitle}</h2>
  </div>
  
  <div class="relative w-full overflow-hidden">
     <!-- Gradient masks for smooth fade -->
    <div class="absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-white to-transparent z-10"></div>
    <div class="absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-white to-transparent z-10"></div>

    <div class="flex items-center gap-8 w-max animate-marquee hover:[animation-play-state:paused] py-2">
      {marqueePartners.length > 0 ? (
        marqueePartners.map((partner) => (
          <div class="h-10 w-24 md:w-28 flex items-center justify-center opacity-60 hover:opacity-100 grayscale hover:grayscale-0 transition-all duration-300">
            {partner.logo ? (
              <img 
                src={partner.logo} 
                alt={partner.name} 
                class="max-h-full max-w-full object-contain"
              />
            ) : (
              <span class="font-bold text-gray-400 text-sm whitespace-nowrap">{partner.name}</span>
            )}
          </div>
        ))
      ) : (
        /* Fallback */
        [1, 2, 3, 4, 1, 2, 3, 4].map((i) => (
          <div class="h-10 w-24 flex items-center justify-center opacity-30 grayscale border border-dashed border-gray-300 rounded-lg">
            <span class="font-medium text-gray-400 text-xs">Partner {i}</span>
          </div>
        ))
      )}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
</style>
