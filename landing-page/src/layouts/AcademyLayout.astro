---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title: string;
    description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description || "Isyraq Annur Academy - Pusat Studi Islam & Peradaban"} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Cinzel:wght@400;500;600;700;800&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&family=Noto+Naskh+Arabic:wght@400;500;600;700&display=swap" rel="stylesheet">
        <script src="https://unpkg.com/lucide@latest"></script>
		<ViewTransitions />
	</head>
	<body class="bg-stone-50 text-stone-800 font-sans selection:bg-royal-100 selection:text-royal-900">
        
        <!-- Academy Navbar -->
        <nav class="fixed w-full z-50 transition-all duration-300 bg-royal-950/90 backdrop-blur-md border-b border-white/10" id="navbar">
            <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
                <a href="/" class="flex items-center gap-3 group">
                    <div class="w-10 h-10 bg-royal-800 rounded-lg flex items-center justify-center text-white font-display font-bold text-xl group-hover:bg-royal-700 transition">
                        I
                    </div>
                    <div>
                        <h1 class="text-white font-display font-bold text-lg leading-none tracking-wide">Isyraq Academy</h1>
                        <p class="text-[10px] text-gold-400 uppercase tracking-[0.2em]">Non-Profit Education</p>
                    </div>
                </a>

                <div class="hidden md:flex items-center gap-8">
                    <a href="/" class="text-royal-100 hover:text-white text-sm font-medium transition">Beranda</a>
                    <a href="/courses" class="text-royal-100 hover:text-white text-sm font-medium transition">Katalog Kursus</a>
                    <a href="/mentors" class="text-royal-100 hover:text-white text-sm font-medium transition">Pengajar</a>
                    <a href="/about-academy" class="text-royal-100 hover:text-white text-sm font-medium transition">Tentang Kami</a>
                </div>

                <div class="flex items-center gap-4">
                    <a href="/courses" class="px-5 py-2.5 bg-gold-400 text-royal-950 rounded-full font-bold text-xs uppercase tracking-widest hover:bg-gold-500 transition shadow-lg shadow-gold-400/20">
                        Mulai Belajar
                    </a>
                </div>
            </div>
        </nav>

        <main class="pt-24 min-h-screen">
		    <slot />
        </main>

        <!-- Academy Footer -->
        <footer class="bg-royal-950 text-white pt-24 pb-12 border-t border-royal-900">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid md:grid-cols-4 gap-12 mb-16">
                    <div class="col-span-1 md:col-span-2">
                        <h2 class="font-display text-3xl mb-6">Isyraq Academy</h2>
                        <p class="text-royal-200 leading-relaxed max-w-md mb-8">
                            Menghidupkan kembali tradisi keilmuan Islam dengan pendekatan modern.
                            Keuntungan dari akademi ini didonasikan untuk Pesantren Al-Bisri.
                        </p>
                        <div class="flex gap-4">
                            <a href="#" class="w-10 h-10 rounded-full bg-royal-900 flex items-center justify-center hover:bg-royal-800 transition"><i data-lucide="instagram" class="w-5 h-5"></i></a>
                            <a href="#" class="w-10 h-10 rounded-full bg-royal-900 flex items-center justify-center hover:bg-royal-800 transition"><i data-lucide="youtube" class="w-5 h-5"></i></a>
                            <a href="#" class="w-10 h-10 rounded-full bg-royal-900 flex items-center justify-center hover:bg-royal-800 transition"><i data-lucide="facebook" class="w-5 h-5"></i></a>
                        </div>
                    </div>
                    <div>
                        <h3 class="font-display text-lg mb-6 text-gold-400">Program Studi</h3>
                        <ul class="space-y-4 text-royal-200 text-sm">
                            <li><a href="#" class="hover:text-white transition">Ilmu Fiqih & Ushul</a></li>
                            <li><a href="#" class="hover:text-white transition">Bahasa Arab Klasik</a></li>
                            <li><a href="#" class="hover:text-white transition">Tafsir Al-Qur'an</a></li>
                            <li><a href="#" class="hover:text-white transition">Sejarah Peradaban</a></li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-display text-lg mb-6 text-gold-400">Dukungan</h3>
                        <ul class="space-y-4 text-royal-200 text-sm">
                            <li><a href="#" class="hover:text-white transition">Pusat Bantuan</a></li>
                            <li><a href="#" class="hover:text-white transition">Konfirmasi Pembayaran</a></li>
                            <li><a href="#" class="hover:text-white transition">Karir Pengajar</a></li>
                            <li><a href="#" class="hover:text-white transition">Syarat & Ketentuan</a></li>
                        </ul>
                    </div>
                </div>
                <div class="pt-8 border-t border-royal-900 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-royal-400">
                    <p>&copy; 2026 Isyraq Annur Academy. All rights reserved.</p>
                    <p>Bagian dari <span class="text-white font-bold">Yayasan Isyraq Annur</span></p>
                </div>
            </div>
        </footer>

        <script is:inline>
            function initIcons() {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }
            initIcons();
            document.addEventListener('astro:after-swap', initIcons);
            document.addEventListener('astro:page-load', initIcons);
        </script>
	</body>
</html>
